<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Login</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            background-color: #f4f4f4;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .login-container {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 400px;
            text-align: center;
        }

        input {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            box-sizing: border-box;
        }

        .password-container {
            position: relative;
        }

        #password {
            padding: 10px;
            margin-bottom: 15px;
            box-sizing: border-box;
            display: inline-block;
        }

        .toggle-password {
            position: absolute;
            top: 50%;
            right: 10px;
            transform: translateY(-50%);
            cursor: pointer;
        }

        button {
            background-color: #008CBA;
            color: #fff;
            padding: 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            width: 100%;
        }

        button:hover {
            background-color: #007499;
        }

        .register-link {
            margin-top: 10px;
            color: #008CBA;
            text-decoration: none;
        }
        footer {
            background-color: #f8f8f8;
            padding: 10px 0;
            text-align: center;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body>

<div class="login-container">
    <h2>Login</h2>
    <form id="loginForm">
        <input type="email" id="email" placeholder="Email" required>
        <div class="password-container">
            <input type="password" id="password" placeholder="Passwort" required>
            <span class="toggle-password" onclick="togglePasswordVisibility()">üëÅÔ∏è</span>
        </div>
        <button type="submit">Anmelden</button>
    </form>
    <a href="/" id="forgotPassword">Passwort vergessen?</a>
    <p class="register-link">Noch kein Konto? <a href="/register" id="registerLink">Registrieren</a></p>
</div>

<script>
    function togglePasswordVisibility() {
        var passwordInput = document.getElementById("password");
        var toggleIcon = document.querySelector(".toggle-password");

        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            toggleIcon.textContent = "üëÅÔ∏è";
        } else {
            passwordInput.type = "password";
            toggleIcon.textContent = "üëÅÔ∏è";
        }
    }

    document.getElementById("loginForm").addEventListener("submit", function (event) {
        event.preventDefault();
        // Hier kannst du die Anmelde-Logik implementieren
        console.log("Anmeldung durchgef√ºhrt");
    });

    document.getElementById("forgotPassword").addEventListener("click", function () {
        var email = prompt("Geben Sie Ihre E-Mail-Adresse ein:");
        if (email) {
            // Hier kannst du die Logik f√ºr das Zur√ºcksetzen des Passworts implementieren
            console.log("Passwort zur√ºcksetzen f√ºr: " + email);
        }
    });

    document.getElementById("registerLink").addEventListener("click", function () {
        // Hier kannst du zur Registrierungsseite weiterleiten
        console.log("Zur Registrierung weiterleiten");
    });
</script>

<footer>
    <div class="col-12">
        <div class="row d-flex justify-content-center align-items-center">
            &copy; 2024 Learn to Earn. Alle Rechte vorbehalten.
        </div>
    </div>
</footer>

</body>
</html>
