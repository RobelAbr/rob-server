        }
        h2 {
            color: #333;
        }
        h3 {
            color: #333;
        }
        p {
            color: #666;
        }
        .services-list {
            list-style: none;
            padding: 0;
            width: 100%;
        }
        .services-list a {
            text-decoration: none; /* Unterstreichungen für Links entfernen */
            color: #333; /* Textfarbe für Links festlegen */
        }
        .services-list li {
            border: 1px solid #ddd;
            border-radius: 4px;
            margin-bottom: 20px;
            padding: 20px;
            width: 100%; /* Volle Breite verwenden */
        }
        .services-list li:hover {
            background-color: #f0f0f0;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        @media (max-width: 576px) {
            .services-list li {
                width: 100%; /* Auf kleinen Bildschirmen die volle Breite verwenden */
                float: none; /* Float aufheben, um die Elemente untereinander zu platzieren */
            }
        }
        @media (min-width: 992px) {
            .container {
                width: 70%;
            }
            .services-list li {
                width: 45%;
                float: left;
                margin-right: 5%;
            }
        }
        @media (min-width: 1200px) {
            .container {
                width: 50%;
            }
        }
        section {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            padding: 80px;
        }
        .image-container {
            width: 40%;
            margin-bottom: 20px;
            position: relative;
            overflow: hidden;
        }
        .image-container img {
            max-width: 80%;
            max-height: 80%;
            align-content: center;
            transition: transform 0.3s ease-in-out;
        }
        .image-container:hover img {
            transform: scale(1.1); /* Vergrößerungseffekt beim Überfahren mit der Maus */
        }
        #back-to-top {
            position: fixed;
            bottom: 50px;
            right: 20px;
            display: none;
            width: 50px;
            height: 50px;
            background-color: rgba(0, 123, 255, 0.23); /* Hintergrundfarbe des Buttons */
            color: #fff; /* Farbe des Pfeils */
            border: none;
            border-radius: 50%;
            font-size: 24px;
            text-align: center;
            line-height: 50px;
            text-decoration: none;
            transition: background-color 0.3s, color 0.3s;
        }
        #back-to-top:hover {
            background-color: rgba(0, 86, 179, 0.15); /* Hintergrundfarbe im Hover-Zustand */
            color: #fff; /* Farbe im Hover-Zustand */
